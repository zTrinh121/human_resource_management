      e.PHONE_NUMBER,
      e.DATE_OF_BIRTH,
      e.HIRE_DATE,
      e.SALARY,
      e.MANAGER_ID,
      e.DEPARTMENT_ID,
      e.JOB_ID,
      e.USER_ID,
      d.DEPARTMENT_NAME,
      m.FIRST_NAME || ' ' || m.LAST_NAME AS MANAGER_NAME,  -- Concatenate manager's first and last name
      j.JOB_TITLE,
      u.USER_NAME,
      u.PASSWORD,
      u.ROLE_ID,
      d.MANAGER_ID
    FROM
      employees e
        LEFT JOIN
      departments d ON e.DEPARTMENT_ID = d.DEPARTMENT_ID
        LEFT JOIN
      employees m ON e.MANAGER_ID = m.EMPLOYEE_ID
        LEFT JOIN
      jobs j ON e.JOB_ID = j.JOB_ID
        LEFT JOIN
      users u ON e.USER_ID = u.USER_ID
  </select>

